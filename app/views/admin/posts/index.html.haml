%h1= t Post.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Post.human_attribute_name(:content)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.content
        %td= render 'admin/shared/index_buttons', resource: post
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_post_path, class: 'btn btn-primary btn-sm'
