%h1= t PartnerBank.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= PartnerBank.human_attribute_name(:partner)
      %th= PartnerBank.human_attribute_name(:bank)
      %th= PartnerBank.human_attribute_name(:account)
      %th= PartnerBank.human_attribute_name(:comment)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @partner_banks.each do |partner_bank|
      %tr
        %td= partner_bank.partner.title
        %td= partner_bank.bank.title
        %td= partner_bank.account
        %td= partner_bank.comment
        %td= status_mark partner_bank.status
        %td= render 'admin/shared/index_buttons', resource: partner_bank
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_partner_bank_path, class: 'btn btn-primary btn-sm'
