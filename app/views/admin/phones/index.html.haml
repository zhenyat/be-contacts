%h1= t Phone.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Phone.human_attribute_name(:number)
      %th= Phone.human_attribute_name(:kind)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @phones.each do |phone|
      %tr
        %td= phone.number
        %td= phone.kind
        %td= status_mark phone.status
        %td= render 'admin/shared/index_buttons', resource: phone
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_phone_path, class: 'btn btn-primary btn-sm'
