%h1= t Author.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Author.human_attribute_name(:name)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @authors.each do |author|
      %tr
        %td= author.name
        %td= render 'admin/shared/index_buttons', resource: author
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_author_path, class: 'btn btn-primary btn-sm'
